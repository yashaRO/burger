<div class='container'>
	<div class='row'>
		<center>
			WELCOME TO BURGER
		</center>
	</div>
	<br><br><br>
	<div class='row'>
		<div class='col-lg-1 col-md-1'></div>
		
		<div class='col-lg-5 col-md-5'>
			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
						<li>
							<!--Why this pic? No idea. I like it though-->
							<img src='http://www.jqueryscript.net/images/Simplest-Responsive-jQuery-Image-Lightbox-Plugin-simple-lightbox.jpg'/>
							
							{{> devour}}
							<br>
							{{this.burger_name}}
						</li>
						<br>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
		
		<div class='col-lg-1 col-md-1'></div>
		
		<div class='col-lg-4 col-md-4'>
			<ol>
				{{#each burgers}}
					{{#if this.devoured}}
						<li>{{this.burger_name}}</li>
					{{/if}}
				{{/each}}
			</ol>
		</div>
		
		<div class='col-lg-1 col-md-1'></div>
	</div>
		
	<div class='row'>
		<center class='submission'>
		<form action='/' method='POST'>
			<input maxlength='50' name='burgerName'>
			<br>
			<button type='submit'>Submit!</button>
		</form>
		</center>
	</div>
</div>